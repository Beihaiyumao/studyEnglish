.login_logo{
  width: 206rpx;
  height: 206rpx;
  margin-top: 60rpx;
  text-align: center;
  display: inline-block;
}
.login_btn{
  display: block;
  font-size:43rpx;
  border: 1px solid #fff;
  border-radius: 55rpx;
  line-height: 55rpx;
  margin-top: 82rpx;
  background-color: #ffffff;   
  color:#1f6f4a;
