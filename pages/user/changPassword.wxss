/* pages/user/changPassword.wxss */
/*login bg */

.regist_bg {
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: -1;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/* pages/login/login.wxss */

form {
  width: 310px;
  height: 240px;
  line-height: 40px;
  /* border: 1px solid red;  */
}

input {
  border: 1px solid #ccc;
  width: 310px;
  height: 40px;
}

.button {
  margin-top: 20px;
}

.header text {
  font-size: 25px;
  color: #666;
}

form text {
  font-size: 20px;
  color: #666;
}

.fpwd {
  margin-top: 200px;
}

.fpwd text {
  color: #ccc;
  font-size: 18px;
}

.login_form {
  width: 100%;
  height: auto;
}

.form_conner {
  width: 70%;
  height: 100%;
  margin: 10% 10%;
  padding: 30rpx 5%;
  border-radius: 20rpx;
  display: block;
  text-align: center;
}

.form_conner input {
  display: block;
  font-size: 43rpx;
  border: 1px solid #000;
  border-radius: 16rpx;
  line-height: 55rpx;
  margin-top: 58rpx;
  width: 90%;
  text-align: left;
    padding: 0rpx 5%;
}

.email {
  background: url(/images/login/emil.png);
  background-position: left;
  background-size: 100% 100%;
  z-index: 999;
}


.login_logo {
  width: 206rpx;
  height: 206rpx;
  margin-top: 60rpx;
  text-align: center;
  display: inline-block;
}

.login_btn {
  display: block;
  font-size: 30rpx;
  border-radius: 16rpx;
  line-height: 55rpx;
  margin-top: 270rpx;
  background-color: green;
  color: #ffffff;
  text-align: center;
  width: 100%;
  padding: 10rpx 0px;
  margin-bottom: 27rpx;
  font-weight: 200;
  font-family: YouYuan;
}

.resgin {
  background: none;
  text-align: left;
  font-weight: 100;
  color: #fff;
}
.passwordPH{
  font-size: 15px;
  font-weight: 200;
  font-family: YouYuan;
  padding-left: 20px;
}